<!--begin::Main-->
<div class="container">
    <!--begin::Table-->

    <table class="table" id="pets_table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Picture</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Breed</th>
                <th scope="col">Gender</th>
                <th scope="col">Vaccinated?</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <!--end::Table-->
</div>
<!--end::Main-->


<script>
        display_pets();
    $('#gender_list li a').on('click', function () {
        $('#gender').val($(this).html());
        $('#gender_dropdownMenuButton').html($(this).html());
    });
    $('#is_vaccinated_list li a').on('click', function () {
        $('#is_vaccinated').val($(this).html());
        $('#is_vaccinated_dropdownMenuButton').html($(this).html())
    })

    $('#is_vaccinated_list li a').on('click', function () {
        if ($(this).html() == 'Yes') {
            $('#div_upload_vaccine').removeClass('d-none');
        }
        else {
            $('#div_upload_vaccine').addClass('d-none');
        }

        $('#is_vaccinated').val($(this).html());
        $('#is_vaccinated_dropdownMenuButton').html($(this).html())
    })

    function add_pet() {

        KTApp.blockPage({
            overlayColor: '#000000',
            state: 'danger',
            message: 'Please wait...'
        });

        var name = $('#name').val()
        var type = $('#type').val()
        var breed = $('#breed').val()
        var gender = $('#gender').val()
        var is_vaccinated = $('#is_vaccinated').val()
        if (is_vaccinated == "Yes") {
            is_vaccinated = 1;
        }
        else {
            is_vaccinated = 0;
        }

        var data = {
            'owner_id': '@ViewData["ACC_ID"]',
            'name': name,
            'type': type,
            'breed': breed,
            'gender': gender,
            'is_vaccinated': is_vaccinated
        }

        $.ajax({
            type: 'post',
            url: 'add_pet',
            data: data,
            async: true,
            success: function (response) {
                var result = JSON.parse(response);

                if (result[0].result == "success") {
                    SaveFile(result[0].name);
                }
                else if (result[0].result == "error - pet already exist") {
                    swal({
                        title: 'Error',
                        text: 'Pet already exist',
                        timer: 3000,
                        icon: "error",
                        button: false
                    }).then(
                        function () {
                            clear_fields();
                        }
                    )
                }
                else {
                    swal({
                        title: 'Error',
                        text: 'Server Error',
                        timer: 3000,
                        icon: "error",
                        button: false
                    }).then(
                        function () {
                            clear_fields();
                        }

                    )
                }

            }
        })

        KTApp.unblockPage();
    }

      function SaveFile(name) {

            var files = document.getElementById('picture').files;

            const fileSize = files[0].size / 1024 / 1024;
            if (!(fileSize > 20)) {

                var fileuri = "";
                var fileData = new FormData();
                fileData.append(files[0].name, files[0]);
                fileData.append("id", @ViewData["ACC_ID"]);
                fileData.append("name", name)

                $.ajax({
                    url: '/Config/save_pet_pic',
                    type: 'post',
                    datatype: 'json',
                    contentType: false,
                    processData: false,
                    async: false,
                    data: fileData,
                    success: function (response) {
                        if (response == "0") alert("Error");
                        else {
                            swal({
                                title: 'Success',
                                text: 'Pet added successfully',
                                timer: 2000,
                                icon: "success",
                                button: false
                            }).then(
                                function () {
                                    clear_fields()
                                    display_pets();
                                })
                        }
                    }
                });

            }
            else {
                alert("Files cannot be more than 20MB");
            }

        }

        function display_pets() {
            var data = {
                'owner_id': '@ViewData["ACC_ID"]'
            }
            $.ajax({
                type: 'post',
                url: 'display_pets',
                data: data,
                async: true,
                success: function (response) {
                    var result = JSON.parse(response);
                    var tableBody = document.getElementById("pets_table").getElementsByTagName('tbody')[0];
                    var is_vaccinated = '';
                    tableBody.innerHTML = '';
                    var count = 1;
                    result.forEach(function (item) {
                        var row = tableBody.insertRow();
                        row.insertCell(0).innerHTML = count;
                        row.insertCell(1).innerHTML = `<img style="height: 40px;
            width: 50px;" src="https://localhost:44316`+ item.picture + `" alt="IMAGE">`;
                        row.insertCell(2).innerHTML += item.name;
                        row.insertCell(3).innerHTML += item.type;
                        row.insertCell(4).innerHTML += item.breed;
                        row.insertCell(5).innerHTML += item.gender;
                        if (item.is_vaccinated == 1) { is_vaccinated = 'Yes'; }
                        else { is_vaccinated = 'No'; }
                        row.insertCell(6).innerHTML += is_vaccinated;
                        count++;
                    });
                }
            });
        }

        function clear_fields() {
            $('#name').val('');
            $('#breed').val('');
            $('#type').val('');
            $('#gender_dropdownMenuButton').html('Select Gender');
            $('#is_vaccinated_dropdownMenuButton').html('Yes or No');
        }



</script>

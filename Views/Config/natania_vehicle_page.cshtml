                                                <label for="exampleInputPassword1">Model<span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="model" placeholder="Enter Model" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 form-group">
                                                <label for="exampleInputPassword1">Plate No.<span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="plate_no" placeholder="Enter Plate No." />
                                            </div>

                                            <div class="col-6 mt-8 custom-file">
                                                <input type="file" class="custom-file-input" id="orcr" />

    <!--begin::Main-->
    <div class="container">
        <!--begin::Table-->

        <table class="table" id="vehicle_table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Type</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Model</th>
                    <th scope="col">Plate No.</th>
                    <th scope="col">ORCR</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <!--end::Table-->
    </div>
    <!--end::Main-->


    <script>

        function register_vehicle() {
            var data = {
                'owner_id': '@ViewData["ACC_ID"]',
                'type': $('#type').val(),
                'brand': $('#brand').val(),
                'model': $('#model').val(),
                'plate_number': $('#plate_no').val()
            }

            $.ajax({
                type: 'post',
                url: 'register_vehicle',
                data: data,
                async: true,
                success: function (response) {
                    var result = JSON.parse(response);
                    if (result[0].result == "true") {
                        SaveFile(result[0].v_id)
                    }
                    else {
                        
                        swal({
                            title: 'Error',
                            text: 'Server Error',
                            icon: "error"
                        }).then(
                            function () {
                                clear_fields()
                            })
                    }
                }
            });
        }

    function SaveFile(v_id) {

      var files = document.getElementById('orcr').files;

      const fileSize = files[0].size / 1024 / 1024;
      if (!(fileSize > 20)) {

          var fileuri = "";
          var fileData = new FormData();
          fileData.append(files[0].name, files[0]);
          fileData.append("acc_id", @ViewData["ACC_ID"]);
          fileData.append("v_id", v_id)

          $.ajax({
              url: '/Config/save_orcr',
              type: 'post',
              datatype: 'json',
              contentType: false,
              processData: false,
              async: false,
              data: fileData,
              success: function (response) {
                  if (response == "0") alert("Error");
                  else {
                      swal({
                          title: 'Success',
                          text: 'Thank you for registering your vehicle, please wait while we verify your vehicle details',
                          icon: "success"
                      })     
                          
                  }
                  clear_fields()
                  display_vehicle();
              }
          });

      }
      else {
          alert("Files cannot be more than 20MB");
      }

  }

        function display_vehicle() {
            var data = {
                owner_id: '@ViewData["ACC_ID"]'
            }
            $.ajax({
                type: 'post',
                url: 'display_vehicle',
                data: data,
                async: true,
                success: function (response) {
                    var result = JSON.parse(response);
                    var tableBody = document.getElementById("vehicle_table").getElementsByTagName('tbody')[0];
                    tableBody.innerHTML = '';
                    var count = 1;
                    result.forEach(function (item) {
                        var row = tableBody.insertRow();
                        row.insertCell(0).innerHTML = count;
                        row.insertCell(1).innerHTML += item.type;
                        row.insertCell(2).innerHTML += item.brand;
                        row.insertCell(3).innerHTML += item.model;
                        row.insertCell(4).innerHTML += item.plate_no;
                        if (item.orcr !== '') { row.insertCell(5).innerHTML += `<a href="https://localhost:44316` + item.orcr + `" target="_blank">View</a>`; }
                        else { row.insertCell(5).innerHTML += 'N/A' }
                        if (item.status == '2') { row.insertCell(6).innerHTML += 'Pending' }
                        else { row.insertCell(6).innerHTML += 'Approved' }
                        count++;
                    });
                }
            });
        }

        function clear_field() {
            $('#owner_id').val('')
            $('#plate_number').val('')
            $('#type').val('');
            $('#vehicle_dropdownMenuButton').html('Select Type');
        }
        display_vehicle();
        $('#type_list li a').on('click', function () {
            $('#type').val($(this).html());
            $('#type_dropdownMenuButton').html($(this).html());
        });
    </script>
